<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/ItemOuterLayout">

	<RelativeLayout
		style="@style/ItemInnerLayout">

		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:id="@+id/listnotify_button"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"

				android:minHeight="50dp"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:paddingTop="5dp"

				android:clickable="false">

				<ImageView
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:id="@+id/listnotify_button_imageView"
					android:src="@drawable/icon_discusslist"
					android:maxWidth="40dp"
					android:scaleType="fitXY"
					android:longClickable="false"
					android:adjustViewBounds="true"
					android:layout_marginTop="25dp"
					android:layout_margin="5dp"
					android:minWidth="40dp"
					/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="10dp"
					android:text="讨  论"
					android:id="@+id/listnotify_button_textView"
					android:layout_gravity="center_horizontal"
					android:textColor="@color/text_gray"
					android:layout_marginLeft="4dp"
					android:layout_marginTop="3dp"
					android:layout_marginRight="4dp"
					android:layout_marginBottom="3dp"
					android:visibility="invisible"/>


			</LinearLayout>


			<!--<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/listnotify_acctpt"
				android:scaleType="fitXY"
				android:layout_alignTop="@id/listnotify_button"
				android:layout_alignBottom="@id/listnotify_button"
				android:layout_alignRight="@id/listnotify_button"
				android:layout_alignLeft="@id/listnotify_button"
				android:src="@drawable/accept_selector"
				android:layout_marginBottom="5dp"/>-->

			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_alignBottom="@id/listnotify_button"
				android:layout_toRightOf="@+id/listnotify_button"
				android:id="@+id/listnotify_text">

				<TextView
					android:id="@+id/listnotify_item_name"
					android:text="标题很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长很长"

					style="@style/ItemName"
					android:layout_marginTop="10dp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/listnotify_last_update_username"
					android:singleLine="true"
					android:textSize="10sp"
					android:textColor="@color/text_gray"
					android:textStyle="bold"
					android:text="张麻子"
					android:layout_below="@+id/listnotify_lab"

					android:layout_marginTop="5dp"

					android:gravity="right"
					android:layout_alignStart="@id/listnotify_item_name"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/listnotify_last_update_content"
					android:singleLine="true"
					android:textSize="10sp"
					android:textColor="@color/text_gray"
					android:textStyle="bold"
					android:text="更新了本讨论更新了本讨论更新了本讨论更新了本讨论更新了本讨论更新了本讨论"
					android:layout_toRightOf="@id/listnotify_last_update_username"
					android:layout_alignBottom="@id/listnotify_last_update_username"


					android:gravity="right"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignLeft="@+id/listnotify_item_name"
					android:id="@+id/listnotify_lab"
					android:singleLine="true"
					android:textColor="@color/text_gray"
					android:layout_alignStart="@id/listnotify_item_name"
					android:layout_below="@+id/listnotify_item_name"
					android:text="来自于项目："
					android:textSize="12sp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/listnotify_projname"
					android:singleLine="true"
					android:textColor="@color/text_gray"
					android:textStyle="bold"

					android:layout_toRightOf="@+id/listnotify_lab"
					android:layout_below="@+id/listnotify_item_name"

					android:layout_alignBottom="@+id/listnotify_lab"

					android:textSize="11sp"
					android:layout_marginLeft="4dp"
					android:text="阳光照耀大地阳光照耀大地阳光照耀大地阳光照耀大地阳光照耀大地阳光照耀大地阳光照耀大地"/>


				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/listnotify_last_update_time"
					android:singleLine="true"
					android:textColor="@color/border"

					android:textSize="11sp"
					android:text="2013-11-20"

					android:layout_alignParentBottom="true"
					android:layout_alignParentRight="true"
					android:layout_alignParentEnd="true" />


			</RelativeLayout>


		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>