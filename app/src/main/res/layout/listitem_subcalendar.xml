<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_blue"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_project"
            android:adjustViewBounds="true"
            android:maxHeight="48dp"
            android:padding="10dp"
            android:scaleType="fitCenter"/>

       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text来自什么日历"
            android:id="@+id/calendarEvent_type"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/text_white"/>-->
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ItemOuterLayout"
        android:id="@+id/calendarEvent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题："
                    android:layout_gravity="bottom"
                    style="@style/ItemName"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/calendarEvent_SummaryTitle"
                    android:textColor="@color/text_dark"
                    android:maxLength="20"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.74" />
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    style="@style/ItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间："
                    android:layout_gravity="bottom"
                    />

                <TextView
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/calendarEvent_startTime"
                    android:textColor="@color/text_dark"
                    android:layout_gravity="bottom"
                    android:maxLength="15" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    style="@style/ItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截止时间："
                    android:layout_gravity="bottom"
                    />

                <TextView
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/calendarEvent_endTime"
                    android:textColor="@color/text_dark"
                    android:layout_gravity="bottom"
                    android:maxLength="15" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    style="@style/ItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地点："
                    android:layout_gravity="bottom"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/calendarEvent_location"
                    android:layout_gravity="bottom"
                    android:textColor="@color/text_dark"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:layout_weight="0.53" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/ItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注："
                    android:layout_gravity="bottom"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/calendarEvent_description"
                    android:layout_gravity="bottom"
                    android:textColor="@color/text_dark"
                    android:maxLines="4"/>

            </LinearLayout>




        </LinearLayout>
    </RelativeLayout>

</LinearLayout>