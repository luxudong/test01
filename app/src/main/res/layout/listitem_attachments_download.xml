<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_white"  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/attach_file_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_document"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/attachment_listitem_filename"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff6fc8d9"
            android:text="Textttttttttttttttttttttttt"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="4dp"
            android:paddingTop="4dp">
            <Button
                android:id="@+id/attachment_down_imagebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="下载附件"
                android:textSize="12sp"
                android:background="@color/text_white"
                android:textColor="@color/text_dark"

                android:layout_gravity="right"/>
            </LinearLayout>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/attach_progressbar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/attach_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="8sp"
        android:text=""
        android:layout_gravity="center_horizontal"/>

</LinearLayout>