<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <SearchView
        android:id="@+id/projectlist_search_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:inputType="textFilter"
        android:queryHint="@string/projectlist_search_hint" >
    </SearchView>

    <com.innoxyz.InnoXYZAndroid.ui.customviews.PullToRefreshListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/projectlist_itemlist"
        android:layout_below="@id/projectlist_search_view"
        android:clickable="false"
        android:divider="@color/none"/>

</RelativeLayout>