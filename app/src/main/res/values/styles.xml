<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="com.innoxyz.InnoXYZAndroid.app_theme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarTabStyle">@style/com.innoxyz.InnoXYZAndroid.actionBarTabStyle</item>

        <item name="android:actionBarStyle">@style/com.innoxyz.InnoXYZAndroid.actionbar_style</item>


                <!--<item name="android:actionBarTabStyle">@android:style/Widget.Holo.Light.ActionBar.TabView</item>-->
        <item name="android:actionBarTabBarStyle">@android:style/Widget.Holo.Light.ActionBar.TabBar</item>
        <item name="android:actionBarTabTextStyle">@android:style/Widget.Holo.Light.ActionBar.TabText</item>
        <item name="android:showDividers">none</item>






    </style>

    <style name="com.innoxyz.InnoXYZAndroid.actionBarTabStyle" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:padding">0dp</item>

        <!--
        -->
    </style>

    <style name="com.innoxyz.InnoXYZAndroid.actionbar_style" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/actionbar_title_bkg</item>
        <item name="android:titleTextStyle">@style/com.innoxyz.InnoXYZAndroid.TitleTextStyle</item>
    </style>

    <style name="com.innoxyz.InnoXYZAndroid.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="ItemName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">12sp</item>

        <item name="android:textColor">@color/title_dark</item>

        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginTop">2dp</item>

    </style>

    <style name="ItemComment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:layout_below">@+id/task_item_name</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:maxWidth">128dp</item>
    </style>

    <style name="ItemGotoIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:maxHeight">12dp</item>
        <item name="android:maxWidth">8dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="ItemOuterLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingRight">1dp</item>
    </style>

    <style name="ItemOuterLayout1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="ItemInnerLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/clickable_background_gray</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="table_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/background_dark</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>